@model BookStorewithCRUD.Models.Domain.Author
@{
    ViewData["Title"] = "Add";
}

<div class="container pt-5">
    <div class="row">
        <div class="col-md-8">
                <a asp-action="UploadExcel" asp-controller="Author">Upload multiple Authors</a>
        </div>
        <div class="col-md-6">
            <h3>Add Author</h3>
            <form asp-action="Add" method="post">
                <div class="form-group">
                    <label asp-for="Authorname">Author Name *
                    </label>
                    <input type="text" class="form-control" asp-for="Authorname" />
                    <span asp-validation-for="Authorname" class="text-danger"></span>
                </div>
                @if (TempData["msg"] != null)
            {
            <div class="form-group">
                @TempData["msg"]
            </div>
            }
            <div class="form-group pt-3">
                <button type="submit" class="btn btn-dark">Save</button>
                <a href="/Author/GetAll" class="btn btn-primary">List</a>
            </div>
            </form>
        </div>
    </div>
</div>

